<com.balysv.materialripple.MaterialRippleLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/outline_border"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_sharda"/>
            <LinearLayout
                android:id="@+id/cart_btn"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.skydoves.elasticviews.ElasticImageView
                    android:id="@+id/plus_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:imageView_duration="200"
                    app:imageView_scale="0.93"
                    android:padding="7dp"
                    android:background="@drawable/rounded_outline_bg"
                    android:src="@drawable/plus">

                </com.skydoves.elasticviews.ElasticImageView>

                <TextView
                    android:id="@+id/txt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#888787"> </TextView>
                <com.skydoves.elasticviews.ElasticImageView
                    android:id="@+id/minus_btn"
                    android:layout_width="25dp"
                    app:imageView_duration="200"
                    app:imageView_scale="0.93"
                    android:layout_height="25dp"
                    android:padding="7dp"
                    android:background="@drawable/rounded_outline_bg"
                    android:src="@drawable/minus">

                </com.skydoves.elasticviews.ElasticImageView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Material across platforms and devices. specification and use the new components and styles"
                    android:textColor="#5A5858"> </TextView>
                <com.skydoves.elasticviews.ElasticImageView
                    android:id="@+id/delete_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="7dp"
                    android:src="@drawable/cancel"
                    android:background="@drawable/rounded_outline_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/estimated_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Product Price"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Rs. 345"
                        android:textSize="13dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Discount"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/discount_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Rs. 345"/>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#E4E4E4"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Product Price"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/afetrDiscountAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Rs. 345"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/net_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 400"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp"/>

                <TextView
                    android:id="@+id/product_cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 400"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/show_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Details"
                android:visibility="gone"
                android:textColor="#1565C0"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:textSize="15dp"/>
        </LinearLayout>

    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>